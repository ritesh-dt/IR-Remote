<LayoutIconButton>:
    size: dp(60), dp(70)
    user_font_size: "48sp"

<Screen>:
    BoxLayout:
        pos_hint: {"x":0, "y":0}
        size_hint: (1, 1)
        orientation: 'vertical'
        GridLayout:
            id: top_layout
            size_hint: (0.9, 0.25)
            pos_hint: {"center_x": 0.5, "top":0.9}
            cols: 4
            spacing: 10
            MDFlatButton:
                size_hint_x: 1/top_layout.cols
                text: "Power"
            MDRaisedButton:
                size_hint_x: 1/top_layout.cols
                text: "Mute"
            MDRaisedButton:
                size_hint_x: 1/top_layout.cols
                text: "Vol+"
            MDRaisedButton:
                size_hint_x: 1/top_layout.cols
                text: "Vol-"
        FloatLayout:
            size_hint: (0.95, 0.3)
            pos_hint: {"center_x": 0.5}
            LayoutIconButton:
                icon: "arrow-up"
                pos_hint:{'center_x':0.5, 'top':0.95}
            LayoutIconButton:
                icon: "arrow-down"
                pos_hint:{'center_x':0.5, 'y':0.05}
            LayoutIconButton:
                icon: "volume-minus"
                pos_hint:{'x': 0.05, 'center_y': 0.5}
            LayoutIconButton:
                icon: "volume-plus"
                pos_hint:{'right': 0.95, 'center_y': 0.5}
        GridLayout:
            pos_hint: {"center_x":0.5, "y":0.5}
            size_hint: (None, None)
            width: self.minimum_width
            height: self.minimum_height
            cols: 3
            padding: 10
            spacing: 10

            LayoutIconButton:
                icon: "numeric-1-box"
            LayoutIconButton:
                icon: "numeric-2-box"
            LayoutIconButton:
                icon: "numeric-3-box"
            LayoutIconButton:
                icon: "numeric-4-box"
            LayoutIconButton:
                icon: "numeric-5-box"
            LayoutIconButton:
                icon: "numeric-6-box"
            LayoutIconButton:
                icon: "numeric-7-box"
            LayoutIconButton:
                icon: "numeric-8-box"
            LayoutIconButton:
                icon: "numeric-9-box"
            LayoutIconButton:
                icon: "numeric-0-box"
            LayoutIconButton:
                icon: "numeric-0-box"
            LayoutIconButton:
                icon: "numeric-0-box"